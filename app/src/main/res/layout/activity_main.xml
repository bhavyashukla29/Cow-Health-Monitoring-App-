<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgg"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THI Calculator"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Guideline to center content vertically -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Group container -->
    <LinearLayout
        android:id="@+id/centerGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <!-- Temperature Input -->
        <EditText
            android:id="@+id/tempInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Temperature (Â°C)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="12dp"/>

        <!-- Humidity Input -->
        <EditText
            android:id="@+id/humidityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Humidity (%)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="12dp"/>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calcBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate THI"
            android:backgroundTint="#673AB7"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Manual Result -->
        <TextView
            android:id="@+id/manualResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual result appears here"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Refresh Button -->
        <Button
            android:id="@+id/refreshBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Live THI"
            android:backgroundTint="#673AB7"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Live THI Result -->
        <TextView
            android:id="@+id/autoTHI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live THI: --"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="8dp"/>

        <!-- Status Label -->
        <TextView
            android:id="@+id/thiStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THI Status: -"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/trendsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Trends"
            android:layout_marginTop="16dp" />

        <!-- Colored Gradient Progress Bar (custom drawable background) -->
        <ProgressBar
            android:id="@+id/thiProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="12dp"
            android:layout_marginTop="24dp"
            android:max="104"
            android:progress="0"
            android:progressDrawable="@drawable/thi_progress"
            android:layout_marginBottom="24dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
